{
    "manifest_version": 2,
    "name": "监控网站在线状态",
    "version": "1.0",
    "description": "监控网站在线状态 IP 地址",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_action": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },
    "background": {
        "scripts": [
            "js/status.js"
        ]
    },
    "permissions": [
        "https://www.baidu.com/"
    ]
}